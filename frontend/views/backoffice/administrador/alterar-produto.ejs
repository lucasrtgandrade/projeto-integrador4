<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Alterar Produto</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .form-container {
            max-width: 500px;
            margin: 0 auto;
        }
        .form-container input, .form-container textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .form-container button {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .form-container button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
<h1>Alterar Produto</h1>

<div class="form-container">
    <form id="formAlterarProduto">
        <input type="hidden" id="produtoId" name="produtoId" value="<%= produto.produto_id %>">

        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<%= produto.nome %>" required>

        <label for="descricao">Descrição:</label>
        <textarea id="descricao" name="descricao" required><%= produto.descricao %></textarea>

        <label for="preco">Preço:</label>
        <input type="number" id="preco" name="preco" step="0.01" value="<%= produto.preco %>" required>

        <label for="qtd_estoque">Quantidade em Estoque:</label>
        <input type="number" id="qtd_estoque" name="qtd_estoque" value="<%= produto.qtd_estoque %>" required>

        <button type="submit">Salvar Alterações</button>
    </form>
</div>

<script>
    document.getElementById('formAlterarProduto').addEventListener('submit', async (event) => {
        event.preventDefault();

        const produtoId = document.getElementById('produtoId').value;
        const nome = document.getElementById('nome').value;
        const descricao = document.getElementById('descricao').value;
        const preco = document.getElementById('preco').value;
        const qtd_estoque = document.getElementById('qtd_estoque').value;

        try {
            const response = await fetch(`/backoffice/administrador/alterar-produto/${produtoId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ nome, descricao, preco, qtd_estoque })
            });

            if (!response.ok) {
                throw new Error('Erro ao salvar alterações');
            }

            alert('Produto alterado com sucesso!');
            window.location.href = '/backoffice/administrador/listar-produtos';
        } catch (error) {
            console.error(error);
            alert('Erro ao salvar alterações. Tente novamente.');
        }
    });
</script>
</body>
</html>