<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/meta') %>
    <title>nop</title>
</head>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }
    th {
        background-color: #f4f4f4;
    }
    .status-toggle {
        cursor: pointer;
        color: blue;
        text-decoration: underline;
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }
    .modal-content {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        text-align: center;
    }
    .modal-buttons {
        margin-top: 20px;
    }
    .modal-buttons button {
        margin: 0 10px;
        padding: 10px 20px;
        cursor: pointer;
    }
</style>
<body>
<%- include('../partials/nav-adm') %>
<h1>Listar Usuários</h1>
<table>
    <thead>
    <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Cargo</th>
        <th>Situação</th>
        <th>Ação</th>
        <th>Editar</th>
    </tr>
    </thead>
    <tbody>
    <% empregados.forEach(empregado => { %>
        <tr>
            <td><%= empregado.nome %></td>
            <td><%= empregado.email %></td>
            <td><%= empregado.id_cargo === 1 ? 'Admin' : 'Estoquista' %></td>
            <td><%= empregado.situacao ? 'Ativo' : 'Inativo' %></td>
            <td>
                        <span class="status-toggle" data-id="<%= empregado.id_funcionario %>" data-status="<%= empregado.situacao %>">
                            <%= empregado.situacao ? 'Desativar' : 'Ativar' %>
                        </span>
            </td>
            <td>
                <button class="edit-button" data-id="<%= empregado.id_funcionario %>">Editar</button>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>

<%- include('../partials/modal') %>

<script src="/javascript/editarFuncionarios.js"></script>
</body>
</html>