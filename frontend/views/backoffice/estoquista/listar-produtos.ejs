<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Listar Produtos - Estoquista</title>
    <link rel="stylesheet" href="/css/estilos-globais.css">
    <link rel="stylesheet" href="/css/estilos-listar-produtos.css">
    <link rel="stylesheet" href="/css/estilos-globais.css">
</head>
<body>

<!-- Navbar -->
<nav class="navBarra">
    <a href="/backoffice/estoquista/" class="logoNavegacao">
        <img src="/imagens/logo-horizontal.svg" alt="Logo do site">
    </a>
</nav>

<h1>Lista de Produtos - Estoquista</h1>

<!-- Filter Input -->
<div class="filtro-container">
    <label for="campoPesquisa">Filtrar por Nome:</label>
    <input type="text" id="campoPesquisa" placeholder="Digite o nome do produto...">
</div>

<!-- Products Table -->
<table>
    <thead>
    <tr>
        <th>Código</th>
        <th>Nome</th>
        <th>Quantidade</th>
        <th>Preço</th>
        <th>Opções</th>
    </tr>
    </thead>
    <tbody id="corpoTabelaProdutos"></tbody>
    <tbody id="corpoTabelaProdutos">
    <!-- Products will be dynamically inserted here -->
    </tbody>

</table>

<!-- Pagination -->
<div class="paginacao" id="paginacao"></div>

<!-- Modal for Product Preview -->
<div id="modalVisualizar" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close" onclick="fecharModalVisualizar()">&times;</span>
        <h2>Pré-visualização do Produto</h2>

        <!-- Product Name -->
        <h3 id="previewNome"></h3>

        <!-- Image Carousel -->
        <div id="carouselContainer">
            <button id="prevSlide" onclick="mudarSlide(-1)">&#10094;</button>
            <div id="carousel">
                <!-- Images will be dynamically added via JavaScript -->
            </div>
            <button id="nextSlide" onclick="mudarSlide(1)">&#10095;</button>
        </div>

        <!-- Stock Quantity -->
        <p>Quantidade em Estoque: <span id="previewEstoque"></span></p>

        <!-- Disabled "Comprar" Button -->
        <button disabled class="botao-comprar">Comprar</button>

        <!-- Back Button -->
        <button onclick="fecharModalVisualizar()">Voltar</button>
    </div>
</div>



<!-- Include the JavaScript -->
<script src="/javascript/listarProdutosEstoquista.js"></script>

</body>
</html>
