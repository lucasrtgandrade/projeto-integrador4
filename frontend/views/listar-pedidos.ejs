<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/produto.css">
    <link rel="stylesheet" href="/css/footer.css">
    <title>Meu Carrinho</title>
</head>
<body>
<%- include('partials/nav-cliente') %>

<main class="conteudo">
    <h1>Meus Pedidos</h1>
    <% if (pedido.length > 0) { %>
        <table>
            <thead>
            <tr>
                <th>Número do Pedido</th>
                <th>Data</th>
                <th>Valor Total</th>
                <th>Status</th>
                <th>Detalhes</th>
            </tr>
            </thead>
            <tbody>
            <% pedido.forEach(item => { %>
                <tr>
                    <td><%= item.id_pedido %></td>
                    <td><%= new Date(item.data_pedido).toLocaleDateString('pt-BR') %></td>
                    <td>R$ <%= parseFloat(item.valor_total).toFixed(2) %></td>
                    <td><%= item.status %></td>
                    <td><a href="/clientes/pedidos/<%= item.id_pedido %>">Ver detalhes</a></td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>Você ainda não fez nenhum pedido.</p>
    <% } %>
</main>
</body>
</html>